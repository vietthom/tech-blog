<div class="container mb-4">
    <div class="text-center pt-4">
        <h1>Welcome {{ loggedInUser.username }}</h1>
        <a href="/newPost"><button class="btn btn-lg btn-dark mt-4">New Post</button></a>
    </div>
    {{#if posts}}
        {{#each posts as |post|}}
            <div class="card mt-4">
                <div class="card-header bg-dark">
                    <div class="title text-center">{{ post.title }}</div>
                    <div class="text-end"><strong>Submitted by {{ cap_first_letter User.username }} on {{ format_date post.createdAt}}</strong></div>
                </div>
                <div class="card-body text-dark">
                    <p class="card-text">{{ post_tease post.body }} <a href="posts/{{ post.id }}">read more...</a></p>
                    <br><br>
                    <a href="/dashboard/editPost/{{ post.id }}"><button class="btn btn-primary">Edit Post</button></a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="card mt-4">
            <div class="card-body text-dark">
                <p class="card-text">
                    You do not currently have and posts.
                    Click the "Nev Post" button above to create your first post.
                </p>
            </div>
        </div>
    {{/if}}
</div>